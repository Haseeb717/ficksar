<!DOCTYPE html>
<html>
<head>
  <title>Flicksar</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
		
	<!-- Header -->
  <nav class="navbar navbar-default mynav">
     <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar top-bar"></span>
            <span class="icon-bar middle-bar"></span>
            <span class="icon-bar bottom-bar"></span>
          </button>
          <%= link_to image_tag('logo.png'),root_path,:class=>"wow fadeInDown logotext" %>
           
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right wow fadeInDown">
              <% if user_signed_in? %>
                  <li><a href=""><span><i class="fa fa-envelope-o fa-2x"></i></span></a></li>
                  <li class="dropdown">
                     <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-home fa-2x"></i> <span class="fa fa-angle-down"></span></a>
                     <ul class="dropdown-menu">
                        <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
                        <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                     </ul>
                  </li>
                <% else %>
                  <li><a href="#"><button href="#" class="btn btn-success registerNow hvr-sink">Become a specialist</button></a></li>
                  <li><%= link_to "Login", new_user_session_path %></li>
                  <li><%= link_to "Signup", new_user_registration_path %></li>
                <% end %>
              </li>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
     </div>
     <!-- /.container-fluid -->
  </nav>
  <!-- Header -->
  
	<%= yield %>

	<div class="footer-bottom">
    <div class="container">
        <div class="row">
           <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 wow fadeInDown">
              <div class="copyright">
                 &copy; 2017, Ficksar, All rights reserved
              </div>
           </div>
           <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 wow fadeInDown">
              <div class="design">
                 <a href="#">Facebook </a> |  <a  href="">Twitter</a> |  <a  href="">Youtube</a>
              </div>
           </div>
        </div>
    </div>
  </div>
  <script type="text/javascript">
     new WOW().init();	
  </script>   

</body>
</html>
